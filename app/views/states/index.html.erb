<p id="notice"><%= notice %></p>

<h1>States Visited!</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>State</th>
      <th>Capitol</th>
      <th>Popluation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.id %></td>
        <td><%= state.name %></td>
        <td><%= state.capitol %></td>
        <td><%= state.popluation %></td>
        <td><%= link_to 'Show', state %></td>
        <td><%= link_to 'Edit', edit_state_path(state) %></td>
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New State', new_state_path %>


<% @images.each do |photo| %>
  <%= image_tag photo, class:"img-responsive" %>
<% end %>
