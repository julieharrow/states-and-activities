<p id="notice"><%= notice %></p>

<h1>Activities Completed!</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Activity</th>
      <th>Cost ($)</th>
      <th>Duration (Days)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.id %></td>
        <td><%= activity.name %></td>
        <td><%= activity.cost %></td>
        <td><%= activity.duration %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity', new_activity_path %>

<% @images.shuffle.each do |photo| %>
  <%= image_tag photo, class:"img-responsive" %>
<% end %>
